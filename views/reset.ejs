<% include ./partials/header %>
<div style="background-image: url(http://willowbrookcentre.co.uk/wp-content/uploads/2019/07/Wild-Camping-In-Scotland.jpg); 
background-size: cover;background-repeat:no-repeat ;height: 833px;">
<div class="container">
<div class="row">
	<div class="col-sm-12" style=" padding-top: 5%;">
		<div style="width:30%; margin:25px auto;">
		<form action="/reset/<%= token %>" method="POST">
		  <legend style="text-align: center;">Reset Password</legend>
		  <div class="form-group">
		    <label for="password">New Password</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary">Update Password</button>
		  </div>
		</form>
	</div>
	</div>
</div>
</div>
</div>
<% include ./partials/footer %>